{
    "compilerOptions": {
      "target": "es5",                         
      "module": "commonjs",                     
      "strict": true,             
      "jsx": "preserve",     
      "sourceMap": true,
      "allowJs": true,
      "resolveJsonModule": true,
      "declaration": true,         
      "esModuleInterop": true,                 
      "forceConsistentCasingInFileNames": true,
      "outDir": "./lib"
    },
    "include": [
      "./src/**/*"
    ]
  }
  